{
  "name": "ssVault",
  "version": "0.1.0",
  "description": "Secure local password and secrets manager built with Electron.",
  "productName": "ssVault",
  "author": "mromasze",
  "license": "MIT",
  "main": "src/main/main.js",
  "scripts": {
    "test": "echo \"No automated tests configured\"",
    "start": "electron-forge start",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "private": true,
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron-forge/publisher-s3": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.0.0"
  },
  "build": {
    "appId": "pl.edu.wszib.mromasze.ssvault",
    "productName": "ssVault",
    "asar": true,
    "files": [
      "src/main/main.js",
      "src/main/preload.js",
      "src/renderer/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{o,h,obj,py,cc,c,cpp}"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/resources/images/icon/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "deb"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "bootstrap": "^5.3.0",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "openpgp": "^6.2.2"
  }
}
